{
    "name": "thopra/styleguide",
    "description": "Styleguide skeleton based on kss-php, containing documentation of bootstrap components",
    "repositories": [
        { "type": "vcs", "url": "https://github.com/thopra/kss-php.git" }
    ],
    "keywords": [
        "kss",
        "styleguide",
        "css documentation"
    ],
    "license": "MIT",
    "require": {
        "php": ">=5.3.3",
        "symfony/finder": ">=2.1",
        "kss-php/kss-php": "dev-symfony6",
        "twbs/bootstrap": "3.3.*",
        "typo3fluid/fluid": "*",
        "twig/twig": "3.3.*",
        "zendframework/zend-cache": "2.5.*",
        "zendframework/zend-serializer": "2.5.*",
        "endroid/qr-code": "^1.5",
        "gajus/dindent": "2.0.*"
    },
    "authors": [
        {
            "name": "Thomas Prangenberg",
            "email": "t@thomas-prangenberg.de",
            "homepage": "http://www.thomas-prangenberg.de"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Thopra\\": "Classes/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "vendor-dir": "Packages/Libraries"
    }
}
